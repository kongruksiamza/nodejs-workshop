<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title></title>
</head>

<body>
  <!-- Page Content -->
  <%- include layout %>
  <div class="container">
    <div class="row">
      <%- include sidebar %>
      <!-- /.col-lg-3 -->

      <div class="col-lg-9">
        <% products.forEach(function(product){ %>
        <div class="card mt-4">
          <img src="<%=product.img%>" alt="" width="300px" height="250px">
          <div class="card-body">
            <h3 class="card-title">ชื่อสินค้า : <%= product.name %></h3>
            <h4>ราคา : $<%= formatMoney(product.price)%></h4>
            <p class="card-text"><%=product.description%></p>
            <form class="form-group" action="/products/cart/" method="post">
                  <input type="hidden" name="product_id" value="<%=product._id%>">
                  <input type="submit" name="" value="เพิ่มลงตะกร้า" class="btn btn-success">
            </form>
          </div>
        </div>
        <% }) %>
      </div>
      <!-- /.col-lg-9 -->

    </div>

  </div>
  <!-- /.container -->

  <!-- Footer -->
  <footer class="py-5 bg-dark">
    <div class="container">
      <p class="m-0 text-center text-white">Copyright &copy; Your Website 2019</p>
    </div>
    <!-- /.container -->
  </footer>
</body>

</html>
